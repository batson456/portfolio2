<%= form_for @message, :url => message_path, :validate => true do |form|
 %>
	<%= form.text_field :email, :placeholder => 'Email Address' %>

	<%= form.text_field :name, :placeholder => 'Name (first and last)' %>

	<%= form.text_field :subject, :placeholder => 'Subject' %>

	<%= form.text_area :message, :placeholder => 'Please enter a message' %>
	<br>
	<%= form.submit "Send", :class => 'button-small' %>
<% end %>