<div class="row">
    <div class="span12">
        <div class="row">
            <% @posts.each do |post| %>
            <div class="span4">
                <h5><%= post.title %></h5>
                <span class="date">Posted <%= time_ago_in_words(post.created_at) %> ago</span>
                <p><%= post.content %></p>
                <%= link_to 'Read More', post, :class => "button-small pull-right" %>
            </div>
            <% end %>
            
        </div>
    </div>
</div>

