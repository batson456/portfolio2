<%= form_for @post do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<br>

	<%= f.label :content %>
	<%= f.text_area :content %>

	<br>

	<%= f.label :category %>
	<%= f.select :category_ids, Category.all.collect {|x| [x.category, x.id]}, {}, :multiple => true %>


	<%= f.submit 'Create' %>

<% end %>